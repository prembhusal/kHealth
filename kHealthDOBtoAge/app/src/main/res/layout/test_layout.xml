<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/ScrollViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/TitleLayout"
            android:layout_width="match_parent" >

            <Button
                android:id="@+id/home_button"
                style="@style/home_button" />

            <TextView
                style="@style/TitleTextView"
                android:text="@string/medications" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Long Acting Bronchodilators"
                android:textColor="@color/blue_text"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dulera"
                android:textSize="30sp" />


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginLeft="20px"/>
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbicort"
            android:textSize="30sp"
            android:id="@+id/check2" />



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advair"
            android:textSize="30sp"
            android:id="@+id/check3" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flovent"
            android:textSize="30sp"
            android:id="@+id/check4" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asmanex"
            android:textSize="30sp"
            android:id="@+id/check5" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qvar"
            android:textSize="30sp"
            android:id="@+id/check6" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulmicort"
            android:textSize="30sp"
            android:id="@+id/check7" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budesonide"
            android:textSize="30sp"
            android:id="@+id/check8" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prednisone"
            android:textSize="30sp"
            android:id="@+id/check9" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prednisolone"
            android:textSize="30sp"
            android:id="@+id/check10" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orapred"
            android:textSize="30sp"
            android:id="@+id/check11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other medications"
                android:textColor="@color/blue_text"
                android:textSize="30sp" />
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montelukast"
            android:textSize="30sp"
            android:id="@+id/check12" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singulair"
            android:textSize="30sp"
            android:id="@+id/check13" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/saveUser"
                style="@style/SaveButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SAVE AND SUBMIT" />
            <Button
                android:id="@+id/previous"
                style="@style/SaveButton"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_previous"
                android:text="PREVIOUS" />



        </LinearLayout>

    </LinearLayout>

</ScrollView>